fondoEncabezadoLogin = #9FCE67
fondoPieLogin = #005DAA
fondoAplicacion = #E6E7E8
fondoInfo = #F1F2F2
colorFuenteLogin = #005DAA

@font-face 
	font-family MyriadPro-Bold;
	src url('../fonts/MyriadPro-Bold.otf')

@font-face 
	font-family MyriadPro-BoldCond;
	src url('../fonts/MyriadPro-BoldCond.otf')

@font-face 
	font-family MyriadPro-Regular
	src url('../fonts/MyriadPro-Regular.otf')

/* la minima expresion iphone 3 4 vertical */
body
	background fondoPieLogin
	color colorFuenteLogin
	font-family Arial
	font-size 16px
	height 100%
	margin 0
	padding 0


footer
	background fondoPieLogin
	color white
	height 60px
	padding 1em 0
	text-align center
	vertical-align middle
	width 100%

	.imgPie
		float left
		padding-left 2%
		img
			height 50px

	.textoPie
		float left
		padding-left 2%
		img
			height 50px

	
header
	background fondoEncabezadoLogin
	color white
	height 55px
	overflow hidden
	padding 0
	position relative
	width 100%
	z-index 2
	

	.logo
		float left
		img
			height 55px


.posts
	display inline-block
	top 0
	left 0
	right 0
	background fondoAplicacion
	bottom 0
	margin  auto
	height  100%
	width  100%

	.container
		height 290px
		padding-top 10px
		width 100%

	figure
		padding-top 10px


	
