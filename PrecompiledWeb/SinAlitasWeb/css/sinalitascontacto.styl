				height 142px

		#menu
			float right
			height 5%
			width 50%
			padding-right 2%
			padding-bottom 0
			margin-top 7%
			#navy
				list-style none
				margin 0
				padding 0
				li
					border-radius 15px 15px 15px 15px
					height 5%
					margin 0.2em
					padding 1%
					background rgba(0, 93, 170, 0.7)
					border 1px solid #005DAA
					/*border-bottom 10px solid blue*/
					float left
					width 15%
					a
						color white
						display block
						font-family 'MyriadPro-Regular, Tahoma'
						text-decoration none
						text-align center
						font-size 0.8em
					a:hover
						color black
						
				li:hover
				li#selected
					background rgba(159, 206, 103, 0.7)
					border 2px solid green
					color black

